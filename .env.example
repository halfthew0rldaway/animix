# Anime API (Required)
NEXT_PUBLIC_API_URL=https://your-consumet-api-url.com

# Manga API (Optional - defaults to Sankavollerei)
# Use www subdomain, not api subdomain
NEXT_PUBLIC_MANGA_API_URL=https://www.sankavollerei.com/comic

# Authentication (Optional)
NEXT_AUTH_SECRET=your_secret_here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Database (Optional)
USE_DATABASE=false
NEXT_PUBLIC_USE_DATABASE=false
DATABASE_URL=postgresql://user:password@localhost:5432/animix

# API Rate Limiting (Optional)
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_PER_MIN=70

# Development Cache (Optional)
DEV_API_CACHE=true
DEV_API_CACHE_TTL_MS=300000
DEV_API_CACHE_ERROR_TTL_MS=20000
