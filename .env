NEXT_PUBLIC_MANGA_API_URL=https://www.sankavollerei.com/comic
# isi dengan domain anda jika di production
NEXTAUTH_URL=http://localhost:3000
# ubah aja biar aman muehehehe
NEXT_AUTH_SECRET=sankanimeisthebest
NEXTAUTH_SECRET=sankanimeisthebest
CONSUMET_BASE_URL=http://localhost:3000
CONSUMET_ANIME_PROVIDER=hianime

# Database
# "true" untuk pakai database, "false" untuk ga pakai
USE_DATABASE=false
# Client-side flag untuk history watch
NEXT_PUBLIC_USE_DATABASE=false
# Jika USE_DATABASE=false, DATABASE_URL bisa di kosongin ae
DATABASE_URL=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Dev cache (prevents API spam while developing)
DEV_API_CACHE=true
DEV_API_CACHE_TTL_MS=300000
DEV_API_CACHE_ERROR_TTL_MS=20000

# Prevent rate-limit bans
SEARCH_ENABLE_INDEX=false
SEARCH_INDEX_DELAY_MS=400
SEARCH_MAX_REQUESTS=1000
SEARCH_MAX_PAGES_PER_LETTER=200
SEARCH_MAX_ITEMS=50000
SEARCH_MAX_REMOTE_QUERIES=3

# Reduce extra watch requests
NEXT_PUBLIC_ENABLE_EPISODE_CHECK=false